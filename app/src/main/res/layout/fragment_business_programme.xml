<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/personal_green_background"
        tools:context=".event_managment.BusinessProgrammeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_business_programme_layout"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/personal_green_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/business_fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business\nProgramme"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                app:layout_constraintBottom_toTopOf="@id/business_programme_stroke"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/business_programme_stroke"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_business_programme_layout"
            android:padding="16dp"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:id="@+id/main_business_programme_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:textSize="18sp"
                android:paddingTop="8dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>