<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/personal_green_background"
    tools:context=".event_managment.EventFragment">

    <TextView
        android:id="@+id/fragment_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event name"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event date"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/fragment_event_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event location"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/fragment_event_date"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_event_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event status"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/fragment_event_location"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>